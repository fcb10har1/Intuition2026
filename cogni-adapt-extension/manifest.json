{
  "manifest_version": 3,
  "name": "Adaptive A11y Layer",
  "version": "0.1.0",
  "description": "AI-powered adaptive accessibility layer (MVP: Focus Mode + Intensity).",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_title": "Adaptive A11y",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
