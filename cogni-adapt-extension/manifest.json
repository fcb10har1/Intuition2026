{
  "manifest_version": 3,
  "name": "Adaptive A11y Layer",
  "version": "0.1.0",
  "description": "AI-powered adaptive accessibility layer for reducing cognitive overload on dense web pages.",

  "permissions": ["storage", "activeTab", "scripting"],

  "background": {
    "service_worker": "src/background/service_worker.js",
    "type": "module"
  },

  "action": {
    "default_title": "Adaptive A11y",
    "default_popup": "src/popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content_script.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/content/adapt/css/base.css",
        "src/content/adapt/css/orb.css",
        "src/content/adapt/css/focus_overlay.css",
        "src/content/adapt/css/cursor.css",

        "src/content/adapt/css/focus_mode.css",
        "src/content/adapt/css/reduce_distractions.css",
        "src/content/adapt/css/reading_ease.css",
        "src/content/adapt/css/step_by_step.css",
        "src/content/adapt/css/time_control.css",
        "src/content/adapt/css/focus_guide.css",
        "src/content/adapt/css/error_support.css",
        "src/content/adapt/css/dark_mode.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
