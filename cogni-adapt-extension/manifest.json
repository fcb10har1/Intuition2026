{
  "manifest_version": 3,
  "name": "Adaptive A11y Layer",
  "version": "0.1.0",
  "description": "AI-powered adaptive accessibility layer (Focus Mode + progressive adaptation).",

  "permissions": ["storage", "activeTab", "scripting"],

  "action": {
    "default_title": "Adaptive A11y",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content_script.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["src/content/adapt/css/focus_mode.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
